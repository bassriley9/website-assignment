CREATE DATABASE IF NOT EXISTS `project` DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci;
Use `project`;

CREATE TABLE IF NOT EXISTS `customer`(
  `customer_id` INTEGER(3) NOT NULL AUTO_INCREMENT,
  `first_name` CHAR(15) NOT NULL,
  `last_name` CHAR(15) NOT NULL,
  `email` VARCHAR(30) NOT NULL,
  `phone` VARCHAR(12) NOT NULL,
  `address` VARCHAR(30) NOT NULL,
  PRIMARY KEY(`customer_id`)
  ) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;

INSERT INTO `accounts` (`customer_id`, `first_name`,`last_name`, `email`, `phone`, `address`) VALUES (1, 'test', 'test', 'test', 'test', 'test@gmail.com');